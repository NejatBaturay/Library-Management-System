@model List<LibraryMVC.Models.OduncBilgi>
@{
    ViewBag.Title = "OduncListele";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2>Odunc Gecmis</h2>

@using (Html.BeginForm("OduncGecmisListele", "Home", FormMethod.Post))
{ 
<div class="col">

    <input type="text" name="aranandeger" placeholder="Uye Sicil No Giriniz" />
    <button type="submit" >Ara</button>

</div>
}

<table class="table table-striped">
    <thead>
        <tr>
            <th>Kitap Adı</th>
            <th>Ödünç Alan Kişi</th>
            <th>Alınan Tarih</th>
            <th>Teslim Edildiği Tarih</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null)
        {
            foreach (var item in Model)
            {
        <tr>
            <td>@item.Kitap.KitapAdi</td>
            <td>@item.Uye.UyeAdi @item.Uye.UyeSoyadi</td>
            <td>@item.AlinanTarih</td>
            <td>@item.TeslimTarihi</td>
        </tr>
            }
        }
    </tbody>
</table>
